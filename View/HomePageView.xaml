<Window x:Class="sensusProducts.View.HomePageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sensusProducts.View"
        xmlns:vm="clr-namespace:sensusProducts.ViewModel"
        mc:Ignorable="d"
        Title="HomePageView" Height="450" Width="800">

    <Window.Resources>
        <vm:HomePageViewModel x:Key="hpvm" />
    </Window.Resources>
    <Grid Visibility="Visible" DataContext="{StaticResource hpvm}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical">
            <Button Command="{Binding OpenAddProductPageCommand}" Content="Add Product" Width="100" Margin="30" />
            <Label Content="Filter" FontWeight="Bold"/>
            <StackPanel Margin="10,0">
                <CheckBox Name="chkWater" Content="Water" IsChecked="False" />
                <CheckBox Name="chkGas" Content="Gas" IsChecked="False" />
                <CheckBox Name="chkElectric" Content="Electric" IsChecked="False" />
                <CheckBox Name="chkSoftware" Content="Software" IsChecked="False" />
            </StackPanel>
        </StackPanel>
        <Border Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Stretch" />
        <Border Grid.Column="1" Grid.ColumnSpan="1" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Stretch" />

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox Margin="30,50,0,10" Height="25" Width="auto" FontSize="13" VerticalAlignment="Center"/>

            </Grid>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.Column="1">
                <ListView >
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Image Source="https://sensusglobal.wpenginepowered.com/wp-content/uploads/sensus-046-field-regulator-product.jpg" Width="100" Height="100" />
                        <TextBlock Text="046 Field Regulators" FontWeight="Bold" />
                        <TextBlock Text="{Binding utilityName}" />
                    </StackPanel>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
