<Page x:Class="sensusProducts.View.ProductDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sensusProducts.View"
        xmlns:vm="clr-namespace:sensusProducts.ViewModel"
        xmlns:converter="clr-namespace:sensusProducts.ViewModel.Helpers"
        mc:Ignorable="d"
        Title="ProductDetailsView" 
      MinHeight="450" MinWidth="800"
      >
    
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Left" Grid.Row="0">
                <Button HorizontalAlignment="Left" Content="Back" Width="50" Command="{Binding NavigateBack}" Margin="15"/>
                <StackPanel Name="UtilityList">
                    
                </StackPanel>
                <TextBlock  TextWrapping="Wrap"  FontSize="20" FontWeight="Bold" Text="{Binding ProductName}" Grid.Row ="0" Margin="20,20,20,0" />
            </StackPanel>
             <Image  Grid.Row="1" Source="{Binding MainImageSource}" Width="300"  />

            <StackPanel  Margin="0,30,0,0" Height="60" Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" Name="productsGallery">
                
            </StackPanel>


            <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="1,0,0,0">
                <Button Content="Edit" Width="54" Height="25" Margin="5,0,30,15" Command="{Binding UpdateProductCommand}"/>
                <Button Content="Delete" Width="54" Height="25" Margin="0,0,0,15" Command="{Binding DeleteProductCommand}"/>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Column="1" VerticalAlignment="Center">
            
                <TabControl x:Name="tabControl" >
                    <TabItem Width="149" Height="35" Margin="10,0,0,0">
                        <TabItem.Header>
                            <TextBlock Text="Description" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </TabItem.Header>
                        <ScrollViewer>
                            <StackPanel Width="500" HorizontalAlignment="Left">
                                <!-- Content for the "Description" tab -->
                                <TextBlock TextAlignment="Justify" Text="{Binding ProductDescription}" TextWrapping="Wrap" />
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Width="149" Height="35">
                        <TabItem.Header>
                            <TextBlock Text="Features"  HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </TabItem.Header>
                        <ScrollViewer>
                             <StackPanel Width="500" HorizontalAlignment="Left">
                         <!-- Content for the "Features" tab -->
                         <TextBlock Margin="10">
                          <Hyperlink Command="{Binding FindDocURLCommand}" >Find Product Documents</Hyperlink>
                         </TextBlock>
                         <TextBlock Text="{Binding ProductFeatures}" Margin="10" TextAlignment="Justify" TextWrapping="Wrap"/>
                         <TextBlock Margin="10">
                         <Hyperlink Command="{Binding ProductDocURLCommand}">Download Product Document</Hyperlink>
                         </TextBlock>
                     </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>

            


        </Grid>
    </Grid>
</Page>
